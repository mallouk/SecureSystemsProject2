#!/bin/bash

sudo mkdir -p /etc/nginx/ssl
sudo cp -r ssl.conf /etc/nginx/conf.d/

cat server/securesysServer.crt ca/securesysCA.crt > bundle.crt
sudo cp -r bundle.crt /etc/nginx/ssl/

cp -r server/securesysServer.key server/securesysServer-backup.key
openssl rsa -in server/securesysServer-backup.key -out securesysServer.key
sudo cp -r securesysServer.key /etc/nginx/ssl/

sudo cp -r clients/matthew/securesysClient.crt /etc/nginx/ssl/
